<Window x:Class="API_Sixth_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:API_Sixth_Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="LatitudeTextBox" Margin="10"/>
            <TextBox x:Name="LongitudeTextBox" Margin="10"/>
            <Button Content="Get Weather" Click="GetWeatherButton_Click" Margin="10"/>
            <lvc:CartesianChart x:Name="WeatherChart" Margin="10">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries Title="Temperature" Values="{Binding TemperatureValues}" />
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Time" Labels="{Binding TimeLabels}"/>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Temperature (°C)"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </StackPanel>
    </Grid>
</Window>
