<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Icon="/Design/toothfairy.png">
    <Grid>
        <TextBox Name="textBoxRequest" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="320,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonSend_Click"/>
        <TextBox Name="textBoxResponse" HorizontalAlignment="Left" Height="200" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
